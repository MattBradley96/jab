#! /bin/bash -x

_set_path () {
    LOCAL=/usr/local
    LOCALS="$LOCAL/bin"
    [[ -d $LOCAL/gnu ]] && LOCALS="$LOCAL/gnu:$LOCALS"
    [[ -d $LOCAL/go/bin ]] && LOCALS="$LOCALS:$LOCAL/go/bin"
    BINS=/usr/bin:/bin:/usr/sbin:/sbin
    HOMES=$HOME/bin:$HOME/.local
    PATH=$HOMES:$LOCALS:$BINS
    export STDOUT=on
    export STDERR=on
    if test -d $HOME/lib -a -n "$(find $HOME/lib -maxdepth 1 -name 'libpython*' -print -quit)"; then
        export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$HOME/lib
    fi
}

_home_user=$HOME/jab

_bashrc () {
    WELCOME_BYE=1
    source $_home_user/__init__.sh
    WELCOME_BYE=
    clean_welcomes
    # set +x
    export PS1="\$? [\u@\h:\$PWD]\n$ "
    # set -x
    sp green
    # echo $PATH | tr ':' '\n'
    # /usr/bin/say -v Anna Ich mÃ¶chte eine Maschine, die schreiben kann, wie ich kann &
    # set -x
    local _bashrc_cd=~/jab
    # set -x
    # PUDB_CD=1 PYTHONPATH=~/hub/pysyte cde $_bashrc_cd # >/dev/null 2>&1
    # echo cde $_bashrc_cd # >/dev/null 2>&1
    # set -x
    cde $_bashrc_cd # >/dev/null 2>&1
    # set +x
    # echo $PATH | tr ':' '\n'
}

BASHRC_LOG=~/log/bashrc.log
vbb () {
    local _log=
    test -f $BASHRC_LOG && _log=$BASHRC_LOG
    (
        cd $_home_user
        local _local=
        test -f local/__init__.sh && _local=local/__init__.sh
        vim -p ~/.bashrc __init__.sh environ.d/__init__.sh src/bash/__init__.sh $_local ~/.vimrc $_log "$@" +/"WELCOME_BYE="
        readlink -f ~/.bashrc __init__.sh environ.d/__init__.sh src/bash/__init__.sh $_local ~/.vimrc $_log
    )
    [[ -f $_log ]] && mv $_log ~/log 2>/dev/null
}

vbl () {
    [[ -f $BASHRC_LOG ]] || return 1
    vim $BASHRC_LOG
}

log_main () {
    set -x
    [[ $- =~ i ]] && main > $BASHRC_LOG 2>&1
    set +x
}

_local () {
    . $_home_user/local/__init__.sh optional
}

main () {
    [[ $- =~ i ]] || return
    _set_path
    _bashrc $_home_user
    _local
    set +m
}

# echo bashrc
main  "$@"
# log_main "$@"

set +x
