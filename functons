#! /bin/sh

kd ()
{ 
    cd `python ~/.jab/python/kd.py $*`
}

ry ()
{
	if [ -n $1 ]
	then
		dir=$1
	else
		dir=.
	fi
	r $dir/*.pyc
	r $dir/*.pyo
	rff $dir
}

rff ()
{
	if [ -n $1 ]
	then
		dir=$1
	else
		dir=.
	fi
	r $dir/*~
	r $dir/fred*
}


svl ()
{
	svn log $* 2>/dev/null | head
}

svu ()
{
	svn info $* | grep URL
}

fsh ()
{
	if [ -f fred.sh ]
	then
		sh fred.sh
	else
		sh fred
	fi
}

fpy ()
{
	if [ -f fred.py ]
	then
		p fred.py
	else
		p fred
	fi
}

which ()
{ 
    ( alias; declare -f ) | \
		$WHICH --tty-only --read-alias --read-functions --show-tilde --show-dot $@
}
