#! /bin/sh

# x

y ()
{
	test -n "$1" && dir=`abspath $1` || dir=$MAIN_PYTHON
	if [[ $dir != `abspath` ]]
	then
		cd $dir
	fi
	clear
	rf
	ry
	if [ -x ./clean ]
	then 
		./clean
	fi
	tags
	ly
	stat
}

# xx

kd ()
{ 
    cd `python ~/.jab/python/kd.py $*`
	stat
}

ru ()
{
	if [ -z "$*" ]
	then 
		sudo -i
	else
		sudo $*
	fi
}

sj ()
{
	svn ci ~/.jab -m"$*"
}


uj ()
{
	cj
	. bashrc
	c-
}

# xxx

cls ()
{
    clean
    clear
    if [ -z "$*" ]
    then
        ls -d `pwd`
        echo
    fi
    ls $*
}

fsh ()
{
	if [ -f fred.sh ]
	then
		sh fred.sh $*
	else
		sh fred $*
	fi
}

fpy ()
{
	if [ -f fred.py ]
	then
		p fred.py $*
	else
		p fred $*
	fi
}

lly ()
{
    ll *.tests
    echo
    ll *.test
    echo
    ll *.py
}

upj ()
{
	if [[ `svn up ~/.jab | grep -v "At revision" | wc -l` != "0" ]]
	then
		uj
	fi
}

# xxxx

tags ()
{
	test -n "$1" && dir=$1 || dir="."
	p ~/.jab/python/ptags.py $dir/*.py
}

stat ()
{
	test -n "$1" && dir=$1 || dir="."
	if [ -d $dir/.svn ]
	then
		svn stat $dir
	fi
}

# xxxxx

clean ()
{
	test -n "$1" && dir=$1 || dir="."
	find $dir -name "*~" -exec /bin/rm -rf {} \;
	find $dir -name ".*~" -exec /bin/rm -rf {} \;
	find $dir -name "fred*" -exec /bin/rm -i {} \;
	find $dir -name "*.py[co]" -exec /bin/rm -i {} \;
}

build ()
{
	if [ -d /mnt/source ]
	then 
		vb
	else
		ssh builder@ie-build-1
	fi
}

kodos ()
{
    pushd /home/builder/Download/ie-build-1/kodos-2.4.9/ >/dev/null
    /usr/bin/python kodos.py &
    popd >/dev/null
}

track ()
{
	if [ -d ~/alans_tests ]
	then
		cd ~/alans_tests
		try
	else
		ssh abrogan@ie-track-1
	fi
}

vfile ()
{
    `echo "$*" | sed -e"s/^File/vim/" | sed -e"s/, line \([0-9]*\).*/ +\1/"`
}

which ()
{ 
    ( alias; declare -f ) | \
		$WHICH --tty-only --read-alias --read-functions --show-tilde --show-dot $@
}

# xxxxx

# xxxxxx

revert ()
{
	cp $1 $1.changed
	svn revert $1
}

# xxxxxxx

svn_log ()
{
    svn log $* | head
}

svn_url ()
{
    svn info $* | grep URL
}

# xxxxxxxx

svn_diff () {
    dir=`dirname $2`
    file=`basename $2`
    pushd "$dir" > /dev/null
    /usr/bin/$1 .svn/text-base/"$file".svn-base "$file"
    popd > /dev/null
}

# xxxxxxxxx

svn_issue ()
{
    svn log $* | grep -i "^issue" | head
}

# xxxxxxxxxx

to_source ()
{
	cd $SOURCE/$*
	clear
	ls
}

# xxxxxxxxxx

to_release ()
{
	cd $RELEASES/$*
	clear
	ls
}

# xxxxxxxxxxx

# xxxxxxxxxxxx

get_pinky_ip ()
{
	pinky_ip=192.168.0.103
	if [ -r ~/pinky.txt ]
	then
		pinky_ip=`cat ~/pinky.txt`
	fi
}

