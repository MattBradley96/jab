#! /bin/sh

kd ()
{ 
    cd `python ~/.jab/python/kd.py $*`
}

ru ()
{
	if [ -z "$*" ]
	then 
		sudo -i
	else
		sudo $*
	fi
}

fsh ()
{
	if [ -f fred.sh ]
	then
		sh fred.sh
	else
		sh fred
	fi
}

fpy ()
{
	if [ -f fred.py ]
	then
		p fred.py
	else
		p fred
	fi
}

which ()
{ 
    ( alias; declare -f ) | \
		$WHICH --tty-only --read-alias --read-functions --show-tilde --show-dot $@
}

svnDiff() {
    dir=`dirname $2`
    file=`basename $2`
    pushd "$dir" > /dev/null
    /usr/bin/$1 .svn/text-base/"$file".svn-base "$file"
    popd > /dev/null
}

