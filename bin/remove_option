#! /usr/bin/env python3
"""Remove an option from args"""

import re

from pysyte.cli.main import run


def add_args(parser):
    parser.positional('option')
    parser.positional('string')


def main(args):
    result = re.sub(args.option, '', args.string)
    print('' if result == '-' else result)
    return True

run(main, add_args)
