#! /bin/bash

. ~/.jab/bin/first_dir

echo $* | grep -q quietly && options=-rf || options=-vrf
first_dir $*
echo $* | grep -q pycos && pycos="$dir/*.pyc $dir/*.pyo" || pycos=
defaults="$dir/*~ $dir/.*~ $dir/*.orig $dir/fred* $dir/mary $dir/*.tmp $dir/*.bak $dir/one $dir/two"
/bin/rm $options $defaults $pycos
for fail in $dir/*.fail
do
	if [[ ! -d $fail ]]
	then
		if [ ! -s $fail ]
		then
			/bin/rm $options $fail
		fi
	fi
done
