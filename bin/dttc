#! /bin/bash

. $HUB/what/what.sh
. $JAB/local/functons.sh

_find_copier () {
    CLI_COPIER=
    for possible in xsel pbcopy; do
        CLI_COPIER=$(which $possible)
        if [[ -n $CLI_COPIER ]]; then
            return 0
        fi
    done
    return 1
}

main () {
    _find_copier
    if [[ ! -x $CLI_COPIER ]]; then
        echo "No clipboard program available" >&2
        return 1
    fi
    _dttc | $CLI_COPIER
    return 0
}

main
