#! /bin/bash

. ~/jab/src/bash/git/functons.sh
. ~/jab/environ.d/colour.sh

clone_dir () {
    echo clone $1
    local _dir=$1
    local _name=${_dir##[/a-zA-Z]*/}
    cd ~/hub
    rm -rf $_name
    git clone https://github.com/jalanb/${_name}.git
}

update_dir () {
    echo update $1
    cd $1
    if [[ -n $(git status -s) ]]; then
        git status
        return 1 
    fi
    grp
}

up_dir () {
    printf "$LIGHT_GREEN================================================\n"
    printf "      $GREEN                  $1\n"
    printf "$LIGHT_GREEN================================================\n"
    printf "$NO_COLOUR\n"
    [[ -d $1 ]] || clone_dir $1
    [[ -d $1 ]] && update_dir $1
}

main () {
    up_dir ~/hub/ackvim
    up_dir ~/hub/al_got_rhythm.net
    up_dir ~/hub/autopep8
    up_dir ~/hub/ciss
    up_dir ~/hub/co.py.cat
    up_dir ~/hub/craas
    up_dir ~/hub/dotsite
    up_dir ~/hub/jail
    up_dir ~/hub/jalanb.github.io
    up_dir ~/hub/cde
    up_dir ~/hub/pss
    up_dir ~/hub/pym
    up_dir ~/hub/vimcat
    up_dir ~/hub/what
    up_dir ~/jab
}

main

